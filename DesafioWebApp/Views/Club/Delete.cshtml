@using DesafioWebApp.Data.Enum
@model Club

<h1>Tem certeza de que deseja excluir este clube?</h1>

<form method="post" asp-action="Delete" enctype="multipart/form-data">
    <input type="hidden" value="AddressId" id="AddressId" />
    <div class="form-group">
        <label asp-for="Titulo">Titulo</label>
        <input asp-for="Titulo" class="form-control" placeholder="Title">
        <span asp-validation-for="Titulo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Descricao">Descrição</label>
        <input asp-for="Descricao" class="form-control" placeholder="Description">
        <span asp-validation-for="Descricao" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CategoriaClub">Categoria do Clube</label>
        <select asp-for="CategoriaClub" asp-items="@Html.GetEnumSelectList<CategoriaCorrida>()" class="form-control">
            <option selected="selected" value="">--Select--</option>
        </select>
        <span asp-validation-for="CategoriaClub" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Endereco.Rua">Rua</label>
        <input asp-for="Endereco.Rua" class="form-control" placeholder="Street">
        <span asp-validation-for="Endereco.Rua" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Endereco.Cidade">Cidade</label>
        <input asp-for="Endereco.Cidade" class="form-control" placeholder="City">
        <span asp-validation-for="Endereco.Cidade" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Endereco.Estado">Estado</label>
        <input asp-for="Endereco.Estado" class="form-control" placeholder="Street">
        <span asp-validation-for="Endereco.Estado" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Imagem">Imagem</label>
        <input asp-for="Imagem" type="file" class="form-control" placeholder="Image">
        <span asp-validation-for="Imagem" class="text-danger"></span>

    </div>
    </form>
    <div class="form-group">
        <form action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Confirmar" class="btn btn-danger float-right mt-3" />
        </form>
     </div>