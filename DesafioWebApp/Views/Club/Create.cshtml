@using DesafioWebApp.Data.Enum
@model Club
@{
}

<form method="post" asp-action="Create">
  <div class="form-group">
    <label asp-for="Titulo">Título</label>
    <input asp-for="Titulo" class="form-control" placeholder="Insira o título">
    <span asp-validation-for="Titulo" class="text-danger"></span>
  </div>

  <div class="form-group">
    <label asp-for="Descricao">Descrição</label>
    <input asp-for="Descricao" class="form-control" placeholder="Insira a descrição do seu Clube">
    <span asp-validation-for="Descricao" class="text-danger"></span>
  </div>

  <div class="form-group">
    <label asp-for="Imagem">Imagem</label>
    <input asp-for="Imagem" class="form-control" placeholder="Upload da imagem">
    <span asp-validation-for="Imagem" class="text-danger"></span>
  </div>
  
  <div class="form-group">
    <label asp-for="CategoriaClub">Categoria do Clube</label>
    <select asp-for="CategoriaClub" asp-items="@Html.GetEnumSelectList<CategoriaClub>()">
      <option>--Selecione--</option>
    </select>
    <span asp-validation-for="CategoriaClub" class="text-danger"></span>
  </div>
  
  <div class="form-group">
    <label asp-for="Endereco.Rua">Rua</label>
    <input asp-for="Endereco.Rua" class="form-control" placeholder="Insira sua rua">
    <span asp-validation-for="Endereco.Rua" class="text-danger"></span>
  </div>
  
  <div class="form-group">
    <label asp-for="Endereco.Cidade">Cidade</label>
    <input asp-for="Endereco.Cidade" class="form-control" placeholder="Insira sua Cidade">
    <span asp-validation-for="Endereco.Cidade" class="text-danger"></span>
  </div>
  
  <div class="form-group">
    <label asp-for="Endereco.Estado">Estado</label>
    <input asp-for="Endereco.Estado" class="form-control" placeholder="Insira seu Estado">
    <span asp-validation-for="Endereco.Estado" class="text-danger"></span>
  </div>
  
  <button type="submit" class="btn btn-primary">Enviar</button>
</form>
