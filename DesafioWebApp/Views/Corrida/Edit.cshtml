@using DesafioWebApp.Data.Enum
@model DesafioWebApp.ViewModels.EditCorridaViewModel

@{
}

<form method="post" asp-action="Edit" enctype="multipart/form-data">
    <input type="hidden" value="EnderecoId" id="EnderecoId" />
    <div class="form-group">
        <label asp-for="Titulo">Titulo</label>
        <input asp-for="Titulo" class="form-control" placeholder="Titulo">
        <span asp-validation-for="Titulo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Descricao">Descricao</label>
        <input asp-for="Descricao" class="form-control" placeholder="Descricao">
        <span asp-validation-for="Descricao" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CategoriaCorrida">Categoria da Corrida</label>
        <select asp-for="CategoriaCorrida" asp-items="@Html.GetEnumSelectList<CategoriaCorrida>()" class="form-control">
            <option selected="selected" value="">--Selecione--</option>
        </select>
        <span asp-validation-for="CategoriaCorrida" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Endereco.Rua">Rua</label>
        <input asp-for="Endereco.Rua" class="form-control" placeholder="Rua">
        <span asp-validation-for="Endereco.Rua" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Endereco.Cidade">Cidade</label>
        <input asp-for="Endereco.Cidade" class="form-control" placeholder="Cidade">
        <span asp-validation-for="Endereco.Rua" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Endereco.Estado">Estado</label>
        <input asp-for="Endereco.Estado" class="form-control" placeholder="Rua">
        <span asp-validation-for="Endereco.Estado" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Imagem">Imagem</label>
        <input asp-for="Imagem" type="file" class="form-control" placeholder="Imagem">
        <span asp-validation-for="Imagem" class="text-danger"></span>

    </div>
    <button type="submit" class="btn btn-primary">Enviar</button>
</form>