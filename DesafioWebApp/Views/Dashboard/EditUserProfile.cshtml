@model DesafioWebApp.ViewModels.EditUserDashboardViewModel

<form method="post" asp-action="EditUserProfile" enctype="multipart/form-data">
    <input type="hidden" id="Id" name="Id" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Ritmo">Ritmo de corrida</label>
        <input asp-for="Ritmo" class="form-control" placeholder="Ritmo">
        <span asp-validation-for="Ritmo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Quilometragem">Quilometragem</label>
        <input asp-for="Quilometragem" class="form-control" placeholder="Quilometragem">
        <span asp-validation-for="Quilometragem" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Cidade">Cidade</label>
        <input asp-for="Cidade" class="form-control" placeholder="Cidade">
        <span asp-validation-for="Cidade" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Estado">Estado</label>
        <input asp-for="Estado" class="form-control" placeholder="Estado">
        <span asp-validation-for="Estado" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Imagem">Imagem de Perfil</label>
        <input asp-for="Imagem" type="file" class="form-control" placeholder="Imagem">
        <span asp-validation-for="Imagem" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Enviar</button>
</form>