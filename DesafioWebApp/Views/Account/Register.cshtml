@model DesafioWebApp.ViewModels.RegisterViewModel

@{
    ViewData["Titulo"] = "Inscrever-se";
}

<div class="row">
    <div class="col-md-6 offset-3">
        <p>
        <h4>Registe-se para uma nova conta</h4>
        </p>

        @if (TempData["Error"] != null)
        {
            <div class="col-md-12 alert alert-danger">
                <span><b>Desculpe!</b> - @TempData["Error"] </span>
            </div>
        }

        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Register">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Passwd" class="control-label"></label>
                        <input asp-for="Passwd" class="form-control" />
                        <span asp-validation-for="Passwd" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ConfirmPasswd" class="control-label"></label>
                        <input asp-for="ConfirmPasswd" class="form-control" />
                        <span asp-validation-for="ConfirmPasswd" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input class="btn btn-outline-success float-right" type="submit" value="Inscrever-se" />
                        <a class="btn btn-outline-secondary" asp-controller="Corrida" asp-action="Index">Cancelar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>